<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devcam">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.devcam.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:keepScreenOn="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.devcam.setThing" />

            </intent-filter>
        </activity>

        <activity
            android:name="com.devcam.GenerateDesignFromTemplateActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.devcam.SelectByLabelActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.devcam.SettingsActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>