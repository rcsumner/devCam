<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/positionTextView"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_marginRight="-6dp"
            android:layout_marginLeft="3dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="center_horizontal"
                    android:padding="0dp"
                    android:layout_margin="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exp. Time:"
                        android:textStyle="bold"
                        android:layout_marginTop="-2dp"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginBottom="-2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EexpTimeTV"
                        android:padding="0dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginBottom="-2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:layout_margin="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISO: "
                        android:textStyle="bold"
                        android:padding="0dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EsensitivityTV"
                        android:padding="0dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:padding="0dp"
                    android:layout_margin="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aperture: "
                        android:textStyle="bold"
                        android:padding="0dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EapertureTV"
                        android:padding="0dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:layout_margin="0dp"
                android:padding="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focus Pt.: "
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="-3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EfocusDistanceTV"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="-3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focal Length: "
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EfocalLengthTV"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>